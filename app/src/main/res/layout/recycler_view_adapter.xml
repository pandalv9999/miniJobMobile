<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorLite">

    <ImageView
        android:id="@+id/imgView_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="3dp"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Software Engineer"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtView_keywords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java, Python, C++"
            android:textColor="@color/colorSecondaryText"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtView_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Santa Clara, CA"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginTop="30dp"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/fav_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/ic_fav_black"/>


</LinearLayout>
